<section class="section">
    <div class="container">
      <div class="columns">
        <div class="column is-8">
          <h1 class="title is-size-1"><%= @project.name %> - Flags</h1>
        </div>
        <div class="column is-4">
          <%= link "New Flag", to: Routes.dashboard_organization_project_flag_path(@conn, :new, @organization, @project), class: "button is-dark" %>
        </div>
      </div>
      <div class="dashboard_organization">
        <h1 class="is-size-2 has-text-dark">Flag List</h1>
        <div class="dashboard_projects">
          <%= for flag <- @flags do %>
            <div class="columns">
              <div class="column is-4">
                <%= link flag.name, to: Routes.dashboard_organization_project_flag_path(@conn, :show, @organization, @project, flag), class: "is-size-3 has-text-dark" %>
              </div>
              <div class="column is-3">
                <%= link flag.is_on, to: Routes.dashboard_organization_project_flag_path(@conn, :show, @organization, @project, flag), class: "is-size-3 has-text-dark" %>
              </div>
              <div class="column is-3">
                <%= link "Delete", to: Routes.dashboard_organization_project_flag_path(@conn, :delete, @organization, @project, flag), method: :delete, data: [confirm: "Are you sure?"], class: "button is-dark" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>